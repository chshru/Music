<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabBarText">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="commitIcon">@drawable/icon_search_white</item>
        <item name="android:textColorSecondary">@color/main_white</item>
    </style>

    <style name="SearchTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/main_white</item>
    </style>

    <style name="PlayerTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColorSecondary">@color/main_white</item>
    </style>

    <style name="WelcomeTheme" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
